{
  "api_config": {
    "base_url": "https://api.b365api.com",
    "token": "YOUR_API_TOKEN",
    "sport_id": 13,
    "sport_name": "tennis",
    "timeout": 30,
    "rate_limit_delay": 1
  },
  "endpoints": {
    "inplay_events": {
      "url": "/v3/events/inplay",
      "method": "GET",
      "description": "Eventos de tênis em andamento",
      "params": {
        "sport_id": 13,
        "token": "required"
      }
    },
    "upcoming_events": {
      "url": "/v3/events/upcoming",
      "method": "GET", 
      "description": "Próximos eventos de tênis",
      "params": {
        "sport_id": 13,
        "token": "required",
        "league_id": "optional",
        "team_id": "optional", 
        "cc": "optional",
        "day": "optional (YYYYMMDD)",
        "skip_esports": "optional",
        "page": "optional (max 100)"
      }
    },
    "ended_events": {
      "url": "/v3/events/ended",
      "method": "GET",
      "description": "Eventos de tênis finalizados",
      "params": {
        "sport_id": 13,
        "token": "required",
        "league_id": "optional",
        "team_id": "optional",
        "cc": "optional", 
        "day": "optional (YYYYMMDD, min 20160901)",
        "skip_esports": "optional",
        "page": "optional (max 100)"
      }
    },
    "event_view": {
      "url": "/v1/event/view",
      "method": "GET",
      "description": "Detalhes de um evento específico",
      "params": {
        "event_id": "required",
        "token": "required"
      }
    },
    "event_odds": {
      "url": "/v2/event/odds", 
      "method": "GET",
      "description": "Odds de um evento específico",
      "params": {
        "event_id": "required",
        "token": "required",
        "source": "optional (bet365, 10bet, etc.)",
        "since_time": "optional",
        "odds_market": "optional"
      }
    },
    "event_odds_summary": {
      "url": "/v1/event/odds_summary",
      "method": "GET", 
      "description": "Resumo das odds de um evento",
      "params": {
        "event_id": "required",
        "token": "required"
      }
    },
    "tennis_ranking": {
      "url": "/v1/tennis/ranking",
      "method": "GET",
      "description": "Rankings de tênis",
      "params": {
        "token": "required",
        "type_id": "optional (1=Singles Men, 2=Doubles Men, 3=Singles Women, 4=Doubles Women)"
      }
    },
    "player_info": {
      "url": "/v1/event/player",
      "method": "GET",
      "description": "Informações de jogador",
      "params": {
        "player_id": "required",
        "token": "required"
      }
    },
    "league_info": {
      "url": "/v1/league",
      "method": "GET", 
      "description": "Informações de liga/torneio",
      "params": {
        "league_id": "required",
        "token": "required"
      }
    },
    "events_search": {
      "url": "/v1/events/search",
      "method": "GET",
      "description": "Busca de eventos",
      "params": {
        "sport_id": 13,
        "token": "required",
        "team": "optional",
        "home": "optional",
        "away": "optional"
      }
    }
  },
  "tennis_markets": {
    "13_1": "Match Winner 2-Way",
    "13_2": "Asian Handicap", 
    "13_3": "Over/Under"
  },
  "tennis_ranking_types": {
    "1": "Singles Men",
    "2": "Doubles Men", 
    "3": "Singles Women",
    "4": "Doubles Women"
  },
  "data_storage": {
    "output_dir": "data",
    "formats": ["json", "csv"],
    "backup_enabled": true,
    "max_file_size_mb": 100
  },
  "collection_settings": {
    "collect_inplay": true,
    "collect_upcoming": true,
    "collect_ended": true,
    "collect_odds": true,
    "collect_rankings": true,
    "collect_player_info": true,
    "max_pages_per_endpoint": 10,
    "days_history": 7,
    "update_interval_minutes": 15
  }
}
